@page
@model LoginModel

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Log in";
}

<section class="login-form">
    <h1 class="login-form__title display-4">@ViewData["Title"]</h1>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <form method="post">
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><span class="fa fa-user"></span></span>
                </div>
                <input class="form-control" asp-for="Input.Login" placeholder="Login" />
            </div>
            <span asp-validation-for="Input.Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><span class="fa fa-lock"></span></span>
                </div>
                <input class="form-control" asp-for="Input.Password" placeholder="Senha" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
