@model AmigoDeleteViewModel
@{
    ViewData["Title"] = "Deletar Amigo";
    AlertViewModel alertModel = ViewBag.alerts;
}

<h4>@ViewData["Title"]</h4>

@if (alertModel != null)
{
    <alerthelper type="@alertModel.Type" message="@alertModel.Text"></alerthelper>
}

<form method="post">
    <input type="hidden" asp-for="Id">
    <div class="row">
        <div class="col-md-12">
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" class="form-control" disabled />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" disabled />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Telefone"></label>
                    <input asp-for="Telefone" class="form-control" disabled />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" disabled />
                </div>
                <div class="form-group col-sm-2">
                    <label asp-for="Status"></label>
                    <input asp-for="Status" class="form-control" disabled />
                </div>
            </div>

            @if (Model.JogosEmprestados.Count() > 0)
            {
                <div class="form-row">
                    <h5>Jogos Emprestados</h5>
                    <table class="table table-striped table-bordered" id="tbResult" style="width:100%;">
                        <thead>
                            <tr>
                                <th>@Html.DisplayName("Nome")</th>
                                <th>@Html.DisplayName("Tipo")</th>
                                <th>@Html.DisplayName("Data do Emprestimo")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.JogosEmprestados)
                            {
                                <tr>
                                    <td>@item.Nome</td>
                                    <td>@item.TipoJogo</td>
                                    <td>@item.DtEmprestimo</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <div class="form-row">
                <div class="form-group offset-md-6 col-md-6 text-right">
                    <button type="submit" class="btn btn-danger">Deletar</button>
                    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</form>