@model AmigoHistoricoEmprestimoViewModel
<div class="modal fade" id="amigojogo" tabindex="-1" role="dialog" aria-labelledby="detailsLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsLabel">@Model.Nome</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5>Jogos Emprestados</h5>
                <table class="table table-striped table-bordered" id="tbResult" style="width:100%;">
                    <thead>
                        <tr>
                            <th>@Html.DisplayName("Nome")</th>
                            <th>@Html.DisplayName("Tipo")</th>
                            <th>@Html.DisplayName("Data do Emprestimo")</th>
                            <th>@Html.DisplayName("Data da Devolução")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Historico)
                        {
                            <tr>
                                <td>@item.Nome</td>
                                <td>@item.TipoJogo</td>
                                <td>@item.DtEmprestimo</td>
                                <td>@item.DtDevolucao</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>